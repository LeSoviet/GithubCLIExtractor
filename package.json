{
  "name": "ghx",
  "version": "0.1.0",
  "description": "Universal CLI tool to extract GitHub data (PRs, commits, issues, releases) into Markdown/JSON",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "ghx": "./bin/ghextractor.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "github",
    "cli",
    "extractor",
    "export",
    "backup",
    "documentation",
    "pull-requests",
    "issues",
    "commits"
  ],
  "author": "LeSoviet",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LeSoviet/ghextractor"
  },
  "dependencies": {
    "@clack/prompts": "^0.8.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "cli-progress": "^3.12.0",
    "handlebars": "^4.7.8",
    "bottleneck": "^2.19.5",
    "conf": "^12.0.0",
    "date-fns": "^3.0.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@types/node": "^20.10.0",
    "@types/cli-progress": "^3.11.5",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "prettier": "^3.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0"
  }
}
